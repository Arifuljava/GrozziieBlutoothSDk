<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WifiPrintPdf">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/profile_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gradientbackgroud">

                </androidx.appcompat.widget.Toolbar>
                <RelativeLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/pdf"
                        android:layout_marginTop="50dp"
                        android:onClick="takePdf"
                        android:layout_height="150dp"
                        ></ImageView>

                </RelativeLayout>
                ///upload and go print
                <Button
                    android:id="@+id/pdf_pickkkk"
                    android:layout_marginLeft="30dp"
                    android:text="Pick Pdf"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="12dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/button5"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="30dp"
                    ></Button>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:text="Print Pdf"
                    android:textSize="12dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:id="@+id/print_relaa"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/button6"

                    ></Button>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>